<div class="user-info mb-4">
  <h2>User info</h2>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image, alt: "User Image", class: "img-fluid rounded-circle mb-3" %>
  <% else %>
    <%= image_tag 'no_image.jpg', alt: "No Image", class: "img-fluid rounded-circle mb-3" %>
  <% end %>
  <table class="table">
    <tbody>
      <tr>
        <th>Name:</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Introduction:</th>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
<% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary mt-2" do %>
       <span style="display: inline-block; width: 100px;">
  <i class="fa-solid fa-user-cog"></i>
</span>
    <% end %>
  <% end %>
</div>
