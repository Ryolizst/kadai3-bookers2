<div class="new-book">
  <h2>New book</h2>
  <%= form_with(model: @book, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Title", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", autocomplete: "off" %>
    </div>
    <div class="mb-3">
      <%= f.label :body, "Body", class: "form-label" %>
      <%= f.text_area :body, class: "form-control", autocomplete: "off", value: nil %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>
</div>