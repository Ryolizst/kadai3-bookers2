<div class="container mt-4">
  <div class="row">
    <!-- 左側のカラム 部分レイアウト化-->
     <div class="col-md-3">
    <%= render 'shared/user_info', user: current_user %>
    <%= render 'shared/new_book', book: @book %>
</div>

   <!-- 右側の投稿 -->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <!-- Usersのリストを表示 -->
      <table class="table">
        <thead>
          <tr>
            <th>Profile Image</th>
            <th>Name</th>
            <th>Show</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, alt: "Profile Image", class: "img-thumbnail", size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', alt: "No Image", class: "img-thumbnail", size: "100x100" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user), class:  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>