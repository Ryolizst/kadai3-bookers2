<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- FontAwesomeの読み込み -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- アプリケーションスタイル -->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column min-vh-100">

    <!-- ナビゲーションバー -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="<%= root_path %>">Bookers</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
             <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-house"></i> Home'), user_path(current_user), class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-users"></i> Users'), users_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-book-open"></i> Books'), books_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-right-from-bracket"></i> Log out'), destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <!-- ログイン前に表示されるリンク -->
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-house"></i> Home'), root_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-link"></i> About'), about_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-user-plus"></i> Sign up'), new_user_registration_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to raw('<i class="fa-solid fa-right-to-bracket"></i> Log in'), new_user_session_path, class: 'nav-link' %></li>
        <% end %>
        </div>
      </div>
    </nav>

    <!-- メインコンテンツ -->
   <div class="container my-4">
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </div>

    <!-- フッター -->
    <footer class="mt-auto py-3 bg-light text-center">
      <div class="container">
        <p class="mb-0">&copy; CopyRight Infratop.inc</p>
      </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>